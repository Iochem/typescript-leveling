{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",

    // Other Outputs
    "sourceMap": true,
    "exactOptionalPropertyTypes": true,
    
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"]
}
