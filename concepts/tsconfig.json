{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "./dist",

    // Environment Settings
    "module": "nodenext",
    "target": "esnext",

    // Other Outputs
    "sourceMap": true,
    "exactOptionalPropertyTypes": true,
    
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "fundamentals/**/*.ts",
    "methods/**/*.ts",
    "oop/**/*.ts",
  ]
}